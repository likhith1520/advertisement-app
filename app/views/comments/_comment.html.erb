<div class="card">
  <div class="card-body">
    <p> Name : <%= comment.name %> </p>
    <p> <%= comment.body %> </p>
    <p> Posted : <%= time_ago_in_words(comment.created_at) %> </p>
    <p> <%=link_to "Delete Comment", [comment.advertisement, comment], method: :delete, class:"btn btn-danger", data:{confirm:"Are you sure? "} %> </p>
  </div>
</div>